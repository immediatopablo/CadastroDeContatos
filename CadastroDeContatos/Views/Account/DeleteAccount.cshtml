@{
    Layout = "_Layout";
}

@model CadastroDeContatos.ViewModels.DeleteAccountViewModel

<h2>Excluir Conta</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>Você está prestes a excluir sua conta. Esta ação é irreversível.</p>
<p><strong>Usuário:</strong> @Model.UserName</p>

<form asp-action="DeleteAccountConfirmed" method="post" onsubmit="return confirm('Você tem certeza que deseja excluir sua conta? Essa ação não pode ser desfeita.');">
    <button type="submit" class="btn btn-danger">Excluir minha conta</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
