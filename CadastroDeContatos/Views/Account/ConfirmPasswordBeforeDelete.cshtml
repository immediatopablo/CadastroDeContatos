@model CadastroDeContatos.ViewModels.ConfirmPasswordViewModel

<h2>Excluir Conta</h2>
<p>Você está prestes a excluir sua conta. Esta ação é irreversível.</p>
<p><strong>Usuário:</strong> @User.Identity.Name</p>

<form asp-action="ConfirmPasswordBeforeDelete" method="post">
    <div class="form-group">
        <label for="Password">Confirme sua senha para continuar:</label>
        <input type="password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger">Confirmar</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
