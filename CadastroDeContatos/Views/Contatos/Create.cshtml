@model CadastroDeContatos.Models.ViewModels.ContatoViewModel

@{
    ViewData["Title"] = "Criar Contato";
}

<h2>@ViewData["Title"]</h2>

<!-- Exibe erros de validação globais -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Erro!</strong> O formulário contém erros.
    </div>
}

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="alert alert-danger">@error.ErrorMessage</div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" asp-for="Nome" />
    </div>

    <div class="form-group">
        <label for="CPF">CPF</label>
        <input type="text" class="form-control" id="CPF" asp-for="CPF" />
    </div>

    <div class="form-group">
        <label for="Telefone">Telefone</label>
        <input type="text" class="form-control" id="Telefone" asp-for="Telefone" />
    </div>

    <div class="form-group">
        <label for="Cep">CEP</label>
        <input type="text" class="form-control" id="Cep" asp-for="Cep" />
    </div>

    <div class="form-group">
        <label for="Logradouro">Logradouro</label>
        <input type="text" class="form-control" id="Logradouro" asp-for="Logradouro" />
    </div>

    <div class="form-group">
        <label for="Bairro">Bairro</label>
        <input type="text" class="form-control" id="Bairro" asp-for="Bairro" />
    </div>

    <div class="form-group">
        <label for="Cidade">Cidade</label>
        <input type="text" class="form-control" id="Cidade" asp-for="Cidade" />
    </div>

    <div class="form-group">
        <label for="Estado">Estado</label>
        <input type="text" class="form-control" id="Estado" asp-for="Estado" />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" asp-for="Email" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Cep').blur(function () {
                var cep = $(this).val().replace('-', '');
                if (cep.length == 8) { // Verifica se o CEP tem 8 caracteres
                    $.getJSON(`https://viacep.com.br/ws/${cep}/json/`, function (data) {
                        if (!data.erro) {
                            $('#Logradouro').val(data.logradouro);
                            $('#Bairro').val(data.bairro);
                            $('#Cidade').val(data.localidade);
                            $('#Estado').val(data.uf);
                        } else {
                            alert('CEP não encontrado.');
                        }
                    });
                } else {
                    alert('CEP inválido.');
                }
            });
        });
    </script>
}
